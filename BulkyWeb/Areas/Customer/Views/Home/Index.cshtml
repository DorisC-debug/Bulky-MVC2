@model IEnumerable<Product>

<div class="row pb-3 mb-5">
    @foreach(var product in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row pb-2">
                <div class="col-12 pb-1">
                    <div class="card border-0 p-3 shadow border-top border-5 rounded">
                        <img src="@product.ImgUrl" class="card-img-top rounded"/>
                        <div class="card-body p-0">
                            <div class="pl-1">
                                <p class="card-title h5 opacity-75 text-uppercase text-center">
                                    @product.Title
                                </p>
                                <p class="card-title text-warning text-center">
                                    by <b>@product.Author</b>
                                </p>
                            </div>
                            <div class="pl-1">
                                <p class=" text-opacity-75 text-dark  text-center mb-0">
                                    List Price: <span class="text-decoration-line-through">@product.ListPrice.ToString("c")</span>
                                </p>
                                <p class=" text-opacity-75 text-dark  text-center">
                                    As low as: <span>@product.Price100.ToString("c")</span>
                                </p>
                            </div>
                            <a asp-action="Details"
                            asp-route-productId ="@product.Id"
                            class="btn bg-gradient btn-primary border-0 form-control">
                                Details
                            </a>
                        </div>
                    </div>

                </div>

            </div>

       </div>
    }
</div>