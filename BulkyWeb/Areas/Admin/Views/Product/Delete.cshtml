@model Product
<div class="container">

    <div class="card shadow m-5 border-0 mb-5">
        <div class="card-header bg-secondary bg-gradient ml-0 py-3">
            <div class="row col-12 text-center">
                <h2 class="text-white py-2">Delete Category</h2>
            </div>
        </div>
        <div class="card-body p-4">
            <form method="post" class="row">
                @* <div asp-validation-summary="All"></div>  *@
                <input asp-for="Id" hidden />
                <div class="form-floating py-2">
                    <input asp-for="Title" type="text" class="form-control shadow " disabled/>
                    <label asp-for="Title" class="ms-2"></label>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-floating py-2">
                    <input asp-for="Description" type="text" class="form-control shadow" disabled />
                    <label asp-for="Description" class="ms-2"></label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-floating py-2">
                    <input asp-for="ISBN" type="text" class="form-control shadow" disabled />
                    <label asp-for="ISBN" class="ms-2"></label>
                    <span asp-validation-for="ISBN" class="text-danger"></span>
                </div>
                <div class="form-floating py-2">
                    <input asp-for="Author" type="text" class="form-control shadow" disabled />
                    <label asp-for="Author" class="ms-2"></label>
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>
                <div class="form-floating py-2">
                    <input asp-for="ListPrice" type="text" class="form-control shadow" disabled />
                    <label asp-for="ListPrice" class="ms-2"></label>
                    <span asp-validation-for="ListPrice" class="text-danger"></span>
                </div>
                <div class="form-floating py-2">
                    <input asp-for="Price" type="text" class="form-control shadow" disabled />
                    <label asp-for="Price" class="ms-2"></label>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-floating py-2">
                    <input asp-for="Price50" type="text" class="form-control shadow" disabled />
                    <label asp-for="Price50" class="ms-2"></label>
                    <span asp-validation-for="Price50" class="text-danger"></span>
                </div>
                <div class="form-floating py-2">
                    <input asp-for="Price100" type="text" class="form-control shadow" disabled />
                    <label asp-for="Price100" class="ms-2"></label>
                    <span asp-validation-for="Price100" class="text-danger"></span>
                </div>
                <div class="row pt-3">
                    <div class="col-6 col-md-3 mt-3">
                        <button type="submit" class="btn btn-danger form-control">
                            Delete Product
                        </button>
                    </div>
                    <div class="col-6 col-md-3 mt-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary border form-control">
                            Back To List
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>


</div>