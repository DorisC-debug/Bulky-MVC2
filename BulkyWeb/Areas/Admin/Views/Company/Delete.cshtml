@model Company

<div class="card shadow m-5 p-0">
    <div class="card-header bg-gradient bg-secondary">
        <div class="row"> 
            <div class="col-12 text-center">
                <h3 class="text-white"> Delete Company</h3>
            </div>
        </div>
    </div>
    <div class="card-body">
        <form method="post" class="row">
            <input asp-for="@Model.Id" hidden />

            <div class="form-floating py-2">
                <input asp-for="@Model.Name" type="text" class="form-control shadow"/>
                <label asp-for="@Model.Name" class="ms-2">
                </label>
                <span  asp-validation-for="@Model.Name">
                </span>
            </div>
            <div class="form-floating py-2">
                <input asp-for="@Model.StreetAddress" type="text" class="form-control shadow" />
                <label asp-for="@Model.StreetAddress" class="ms-2">
                </label>
                <span asp-validation-for="@Model.StreetAddress">
                </span>
            </div>
            <div class="form-floating py-2">
                <input asp-for="@Model.City" type="text" class="form-control shadow" />
                <label asp-for="@Model.City" class="ms-2">
                </label>
                <span asp-validation-for="@Model.City">
                </span>
            </div>
            <div class="form-floating py-2">
                <input asp-for="@Model.State" type="text" class="form-control shadow" />
                <label asp-for="@Model.State" class="ms-2">
                </label>
                <span asp-validation-for="@Model.State">
                </span>
            </div>
            <div class="form-floating py-2">
                <input asp-for="@Model.PostalCode" type="text" class="form-control shadow" />
                <label asp-for="@Model.PostalCode" class="ms-2">
                </label>
                <span asp-validation-for="@Model.PostalCode">
                </span>
            </div>
            <div class="form-floating py-2">
                <input asp-for="@Model.PhoneNumber" type="text" class="form-control shadow" />
                <label asp-for="@Model.PhoneNumber" class="ms-2">
                </label>
                <span asp-validation-for="@Model.PhoneNumber">
                </span>
            </div>
            <div class="row pt-3">
                <div class="col-6 col-md-3 mt-3">
                    <button type="submit" class="btn btn-danger form-control">
                        Delete Company
                    </button>
                </div>
                <div class="col-6 col-md-3 mt-3">
                    <a asp-controller="Company" asp-action="Index" class="btn btn-outline-secondary border form-control">
                        Back To List
                    </a>
                </div>
            </div>
           
        </form>
    </div>
</div>