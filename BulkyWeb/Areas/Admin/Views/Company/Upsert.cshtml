@model Company 

<div class="container">
    <div class="card shadow m-5 p-0">
        <div class="card-header bg-secondary bg-gradient">
            <div class="row col-12 text-center">
                <h3 class="text-white">
                    @(Model.Id != 0?"Update" : "Create") Company
                </h3>
            </div>
        </div>
        <div class="card-body">
            <form method="post" class="row">
                <input asp-for="@Model.Id" hidden />

                <div class="form-floating form-control">
                    <div class="form-floating py-2">
                        <input asp-for="@Model.Name"
                               type="text"
                               class="form-control shadow " />
                        <label asp-for="@Model.Name" class="ms-2"></label>
                        <span asp-validation-for="@Model.Name" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2">
                        <input asp-for="@Model.StreetAddress"
                               type="text"
                               class="form-control shadow " />
                        <label asp-for="@Model.StreetAddress" class="ms-2"></label>
                        <span asp-validation-for="@Model.StreetAddress" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2">
                        <input asp-for="@Model.City"
                               type="text"
                               class="form-control shadow " />
                        <label asp-for="@Model.City" class="ms-2"></label>
                        <span asp-validation-for="@Model.City" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2">
                        <input asp-for="@Model.State"
                               type="text"
                               class="form-control shadow " />
                        <label asp-for="@Model.State" class="ms-2"></label>
                        <span asp-validation-for="@Model.State" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2">
                        <input asp-for="@Model.PostalCode"
                               type="text"
                               class="form-control shadow " />
                        <label asp-for="@Model.PostalCode" class="ms-2"></label>
                        <span asp-validation-for="@Model.PostalCode" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2">
                        <input asp-for="@Model.PhoneNumber"
                               type="text"
                               class="form-control shadow " />
                        <label asp-for="@Model.PhoneNumber" class="ms-2"></label>
                        <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="col-md-3 col-6">
                            @if (Model.Id == 0)
                            {
                                <input type="submit" value="Create" class="btn btn-primary form-control mt-3 w-100" />
                            }
                            else
                            {
                                <input type="submit" value="Update" class="btn btn-primary form-control mt-3 w-100" />
                            }
                            
                        </div>
                        <div class="col-6 col-md-3 mt-3">
                            <a asp-controller="Company" asp-action="Index" class="btn btn-outline-secondary border form-control">
                                Back To List
                            </a>
                        </div>
                    </div>
                    
                    
                    
                </div>
            </form>
        </div>
    </div>
</div>